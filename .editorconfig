# 根目录
root = true
# 匹配全部文件
[*]
# 换行符，4个空格
indent_style =  space
indent_size = 4

# 在文件结尾插入新的一行
insert_final_newline = true

# 行结尾符
end_of_line = lf

# 编码格式
# charset = utf-8

# 去掉尾部空格
trim_trailing_whitespace = true

# 匹配makefile
[Makefile]
indent_style = tab
tab_width = 4

# md文件设置
[*.md]
trim_trailing_whitespace = false
insert_final_newline = false
